    <a href="../">Back</a>
</div>

<div class="center-div mb-3">
    <h2>Delete student</h2>
</div>
<form method="post">
    <div class="mb-3">
        <label for="studentName" class="form-label">Roll No.</label>
        <input type="number" class="form-control" name="roll" value="<%= details.roll %>" readonly>
    </div>
    <div class="mb-3">
        <label for="studentName" class="form-label">Name</label>
        <input type="text" class="form-control" name="name" value="<%= details.name %>" readonly>
    </div>
    <div class="mb-3">
        <label for="studentName" class="form-label">Date of Birth</label>
        <input type="date" class="form-control" name="dob" value="<%= moment(details.dob).format('YYYY-MM-DD') %>" readonly>
    </div>
    <div class="mb-4">
        <label for="studentName" class="form-label">Score</label>
        <input type="number" class="form-control" name="score" value="<%= details.score %>" readonly>
    </div>
    <button type="submit" class="btn btn-danger btn-lg btn-block my-3">Yes</button>
</form>